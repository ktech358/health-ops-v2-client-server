generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPS
  MEMBER
}

enum ClaimStatus {
  SUBMITTED
  IN_REVIEW
  APPROVED
  DENIED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role

  claims    Claim[]  @relation("MemberClaims")
  updated   Claim[]  @relation("UpdatedClaims")

  createdAt DateTime @default(now())
}

model Claim {
  id           Int         @id @default(autoincrement())
  diagnosis    String
  amount       Float
  status       ClaimStatus @default(SUBMITTED)

  memberId     Int
  member       User        @relation("MemberClaims", fields: [memberId], references: [id])

  updatedById  Int?
  updatedBy    User?       @relation("UpdatedClaims", fields: [updatedById], references: [id])

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}
